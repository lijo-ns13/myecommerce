            </div>
        </nav>

        <div class="profile-container">
            <div class="sidebar">
                <h4>Menu</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/user/profile"><i
                                class="fas fa-user"></i> Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/address"><i
                                class="fas fa-map-marker-alt"></i> Addresses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/profile/edit"><i
                                class="fas fa-edit"></i> Edit Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/orders"><i
                                class="fas fa-box"></i> Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                            href="/user/profile/change-password"><i
                                class="fas fa-key"></i> Change Password</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/profile/wallet"><i
                                class="fas fa-wallet"></i> Wallet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout"><i
                                class="fas fa-sign-out-alt"></i> Logout</a>
                    </li>
                </ul>
            </div>

            <div class="main-content">
                <h2 class="mb-4">My Addresses</h2>
                <a href="/user/address/add-address"
                    class="btn btn-primary mb-4">Add New Address</a>

                <% if(user.address.length > 0) { %>
                <% for(const address of user.address) { %>
                <div class="address-card">
                    <h5><%= address.street %>, <%= address.city %></h5>
                    <p><%= address.state %>, <%= address.postalCode %></p>
                    <p>Phone: <%= address.phoneNo %></p>
                    <div class="d-flex justify-content-between mt-3">
                        <a href="/user/address/edit-address/<%= address._id %>"
                            class="btn btn-primary">Edit</a>
                        <button class="btn btn-danger"
                            onclick="deleteAddress('<%= address._id %>')">Delete</button>
                    </div>
                </div>
                <% } %>
                <% } else { %>
                <p>No addresses added yet.</p>
                <% } %>
            </div>
        </div>

        <footer class="bg-dark text-white mt-5">
            <div class="container py-4">
                <div class="row">
                    <!-- About Section -->
                    <div class="col-md-4">
