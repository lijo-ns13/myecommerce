<!-- Orders List -->
<div class="content">
    <div class="container mt-5">
        <h2 class="my-4">My Orders</h2>

        <% orders.forEach(order => { %>
            <div class="order-card">
                <div class="order-header">
                    <h5>Order #<%= order._id %> - 
                        <span class="order-status <%= order.status %>">
                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                        </span>
                    </h5>
                    <p>Payment Method: 
                        <% if (order.paymentDetails.paymentMethod === 'razorpay') { %>
                            Paid via Razorpay
                        <% } else { %>
                            Cash on Delivery
                        <% } %>
                    </p>
                    <% if (order.paymentDetails.paymentMethod === 'razorpay') { %>
                        <p>Transaction ID: <%= order.paymentDetails.transactionId %></p>
                    <% } %>
                    <p>Total: $<%= order.totalPrice %></p>
                    <p>Order Date: <%= new Date(order.orderDate).toLocaleDateString() %></p>
                    <p><strong>Shipping Address:</strong></p>
                    <p>
                        <%= order.shippingAddress.name %><br>
                        <%= order.shippingAddress.street %>, <%= order.shippingAddress.city %><br>
                        <%= order.shippingAddress.state %> - <%= order.shippingAddress.zip %><br>
                        <%= order.shippingAddress.country %>
                    </p>
                </div>

                <div class="order-items">
                    <% order.products.forEach(product => { %>
                    <div class="row">
                        <div class="col-md-3">
                            <img src="<%= product.productId.images[0]?.secured_url %>" class="img-fluid img-thumbnail" alt="<%= product.productId.name %>">
                        </div>
                        <div class="col-md-9">
                            <h5><%= product.productId.name %></h5>
                            <p>Size: <%= product.size %></p>
                            <p>Quantity: <%= product.quantity %></p>
                            <p>Price per unit: $<%= product.productId.finalPrice %></p>
                            <p><strong>Subtotal: $<%= product.quantity * product.productId.finalPrice %></p>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <div class="order-footer">
                    <% if (order.status === 'pending' || order.status === 'processing') { %>
                    <button class="btn btn-danger btn-cancel" onclick="confirmCancelOrder('<%= order._id %>')">Cancel Order</button>
                    <% } %>
                </div>
            </div>
        <% }) %>


        <!-- Pagination Controls -->
        <nav aria-label="Page navigation example" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Previous button -->
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                </li>
        
                <!-- Page numbers -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
        
                <!-- Next button -->
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
        
    </div>
</div>
   

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmCancelOrder(orderId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/user/orders/${orderId}/cancel`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success')
                            .then(() => location.reload());
                        } else {
                            Swal.fire('Error!', data.message, 'error');
                        }
                    })
                    .catch(() => Swal.fire('Error!', 'An error occurred while cancelling the order.', 'error'));
                }
            });
        }
    </script>
