/* Wishlist container responsive styles */
.wishlist-container {
    margin: 20px auto;
    max-width: min(1000px, 95%);
    padding: clamp(20px, 4vw, 40px);
    background-color: white;
    border-radius: 15px;
    box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
}

h1 {
    font-weight: 600;
    color: var(--primary-color);
    text-align: center;
    margin-bottom: clamp(20px, 4vw, 40px);
    font-size: clamp(1.8rem, 4vw, 2.5rem);
}

/* Product item responsive styles */
.product-item {
    padding: clamp(15px, 3vw, 25px);
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
}

.product-image {
    width: clamp(120px, 30%, 150px);
    height: auto;
    object-fit: cover;
    margin: 0;
}

.product-details {
    flex: 1 1 250px;
    min-width: 0;
}

.product-name {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    margin-bottom: 8px;
}

.product-price {
    font-size: clamp(1rem, 2vw, 1.2rem);
    margin-bottom: 12px;
}

/* Size selection responsive styles */
.size-selection {
    margin-top: clamp(10px, 2vw, 15px);
}

.size-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 8px;
}

.size-button {
    padding: 6px 12px;
    font-size: clamp(12px, 1.5vw, 14px);
    min-width: 40px;
}

/* Button responsive styles */
.btn-custom {
    padding: 8px 16px;
    font-size: clamp(14px, 1.5vw, 16px);
}

.remove-button {
    margin: 0;
    flex-shrink: 0;
}



@media (max-width: 768px) {
    .product-item {
        flex-direction: column;
        align-items: flex-start;
    }

    .product-image {
        width: 100%;
        max-width: 200px;
        margin: 0 auto;
    }

    .product-details {
        width: 100%;
    }

    .remove-button {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .size-buttons {
        justify-content: flex-start;
    }
}

@media (max-width: 480px) {
    .wishlist-container {
        padding: 15px;
        margin: 10px auto;
    }

    .btn-custom {
        width: 100%;
        margin-top: 10px;
    }

    .size-buttons {
        gap: 5px;
    }

    .size-button {
        padding: 5px 10px;
        min-width: 35px;
    }
}
