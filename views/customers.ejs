<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Management</title>
    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <style>
    body {
      background-color: #f8f9fa;
    }
    .main-content {
      margin-left: 180px; /* space for sidebar */
      padding: 30px;
      transition: all 0.3s;
    }
    .customer-card {
      border: 1px solid #dee2e6;
      border-radius: 10px;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease;
    }
    .customer-card:hover {
      transform: translateY(-3px);
    }
    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }
  </style>
  </head>
  <body>
    <main class="main-content">
      <div class="container-fluid">
        <!-- Header -->
        <div
          class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
          <h2 class="mb-3 mb-md-0">Customer Management</h2>
          <input
            type="text"
            id="searchInput"
            class="form-control w-100 w-md-50"
            placeholder="Search by name or email" />
        </div>

        <!-- Customer Grid -->
        <div class="row g-4" id="customerList">
          <% customers.forEach((customer) => { %>
          <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 customer-item">
            <div class="customer-card p-4 text-center h-100">
              <img
                src="https://api.dicebear.com/7.x/initials/svg?seed=<%= customer.name %>"
                alt="Customer Avatar"
                class="rounded-circle mb-3"
                style="width: 80px; height: 80px" />
              <h6 class="mb-1 fw-semibold"><%= customer.name %></h6>
              <p class="text-secondary small mb-2"><%= customer.email %></p>
              <p class="mb-3">
                Status:
                <% if (customer.isBlocked) { %>
                <span class="badge bg-danger">Blocked</span>
                <% } else { %>
                <span class="badge bg-success">Active</span>
                <% } %>
              </p>

              <% if (customer.isBlocked) { %>
              <form method="POST"
                action="/admin/customers/unblock-user/<%= customer._id %>"
                class="block-unblock-form">
                <button type="submit"
                  class="btn btn-sm btn-success w-100">Unblock</button>
              </form>
              <% } else { %>
              <form method="POST"
                action="/admin/customers/block-user/<%= customer._id %>"
                class="block-unblock-form">
                <button type="submit"
                  class="btn btn-sm btn-danger w-100">Block</button>
              </form>
              <% } %>
            </div>
          </div>
          <% }) %>

        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mt-4">
            <% if (currentPage > 1) { %>
            <li class="page-item">
              <a
                class="page-link"
                href="?page=<%= currentPage - 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>">Previous</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
              <span class="page-link">Previous</span>
            </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a
                class="page-link"
                href="?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %>"><%=
                i %></a>
            </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a
                class="page-link"
                href="?page=<%= currentPage + 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>">Next</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
              <span class="page-link">Next</span>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </main>

    <script>
    // Debounced search
    let debounceTimer;
const searchInput = document.getElementById("searchInput");
const customerList = document.getElementById("customerList");

searchInput.addEventListener("input", () => {
  clearTimeout(debounceTimer);
  debounceTimer = setTimeout(async () => {
    const searchQuery = searchInput.value.trim();

    try {
      const res = await fetch(`/admin/customers?search=${encodeURIComponent(searchQuery)}&ajax=1`);
      const data = await res.text();
      customerList.innerHTML = data; 
    } catch (err) {
      console.error(err);
    }
  }, 500);
});


    document
      .getElementById("customerList")
      .addEventListener("submit", async (e) => {
        if (!e.target.classList.contains("block-unblock-form")) return;
        e.preventDefault();

        const form = e.target;
        const url = form.action;
        const method = form.method || "POST";

        try {
          const res = await fetch(url, {
            method,
            headers: { "X-Requested-With": "XMLHttpRequest" },
          });

          if (!res.ok) throw new Error("Request failed");
          const data = await res.json();

          if (data.success) {
            const cardBody = form.closest(".customer-card");
            const statusBadge = cardBody.querySelector(".badge");

            if (data.isBlocked) {
              statusBadge.className = "badge bg-danger";
              statusBadge.textContent = "Blocked";
              form.outerHTML = `
                <form method="POST" action="/admin/customers/unblock-user/${data.userId}" class="block-unblock-form">
                  <button type="submit" class="btn btn-sm btn-success w-100">Unblock</button>
                </form>
              `;
            } else {
              statusBadge.className = "badge bg-success";
              statusBadge.textContent = "Active";
              form.outerHTML = `
                <form method="POST" action="/admin/customers/block-user/${data.userId}" class="block-unblock-form">
                  <button type="submit" class="btn btn-sm btn-danger w-100">Block</button>
                </form>
              `;
            }
          }
        } catch (err) {
          console.error(err);
          alert("Something went wrong!");
        }
      });
  </script>

    <!-- Bootstrap 5 JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
