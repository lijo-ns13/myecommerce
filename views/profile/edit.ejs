        }

        .main-content {
            padding: 1rem;
        }

        .form-card {
            padding: 1rem;
        }

        h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem !important;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .btn {
            width: 100%;
            padding: 0.625rem 1.25rem;
        }
    }

    @media (max-width: 576px) {
        .profile-container {
            margin: 0.5rem;
