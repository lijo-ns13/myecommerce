            font-size: 1rem;
            text-align: center;
        }

        .main-content {
            padding: 0.75rem;
        }

        .form-card {
            padding: 0.75rem;
        }

        .form-control {
            font-size: 0.9rem;
        }

        label {
            font-size: 0.9rem;
        }
    }

    

