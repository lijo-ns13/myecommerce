        <script>
        document.getElementById('changeForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const url = "/user/profile/change-password";
            const password = document.getElementById('password').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                const errorDiv = document.getElementById('error');
                errorDiv.innerText = 'New passwords do not match.';
                errorDiv.style.display = 'block';
                return;
            }

            const options = {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ password, newPassword, confirmPassword })
            };

            try {
                const response = await fetch(url, options);
                const result = await response.json();

                if (response.ok) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Password changed successfully.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.href = '/user/profile';
                    });
                } else {
                    const errorDiv = document.getElementById('error');
                    errorDiv.innerText = result.message || 'An error occurred. Please try again.';
                    errorDiv.style.display = 'block';
                }
            } catch (error) {
                console.error('Fetch error:', error);
                const errorDiv = document.getElementById('error');
                errorDiv.innerText = 'An error occurred. Please try again.';
                errorDiv.style.display = 'block';
            }
        });
