/* wishlist */
/* in wishlist */
.product-box {
    position: relative;
}
.wishlist-button {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    transition: all 0.3s ease;
    z-index: 10;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
}

.wishlist-button .heart-icon {
    font-size: 24px;
    color: #ccc;
    transition: all 0.3s ease;
}

.wishlist-button:hover .heart-icon {
    transform: scale(1.1);
}

.wishlist-button.in-wishlist .heart-icon {
    color: #e74c3c; /* Red color for items in wishlist */
}

.wishlist-button:hover {
    background-color: rgba(255, 255, 255, 0.9);
}

/* Loading state */
.wishlist-button.loading .heart-icon {
    animation: pulse 1s infinite;
}

/* Success state */
.wishlist-button.success .heart-icon {
    animation: success-pulse 0.5s;
}

/* Error state */
.wishlist-button.error .heart-icon {
    animation: error-shake 0.5s;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

@keyframes success-pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); color: #2ecc71; }
    100% { transform: scale(1); }
}

@keyframes error-shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
}

