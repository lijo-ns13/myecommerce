<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Inventory Management</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet">
        <style>
    body {
      background-color: #ffffff;
      color: #000000;
    }

    .content {
    margin-left: 250px; /* align with sidebar */
    padding: 20px;      /* same as orders page */
    background-color: #f8f9fa;
}


    .content h1 {
      margin-bottom: 20px;
      font-weight: bold;
      color: #000;
    }
.table th {
    background-color: #0d6efd; /* same as orders page */
    color: #fff;
    text-transform: uppercase;
    font-size: 0.85rem;
}

.table tbody tr.product-row {
    background-color: #ffffff; /* keep subtle for rows */
}

.table tbody tr.size-row {
    background-color: #f8f9fa;
}

    .table {
      margin-top: 20px;
      border: 1px solid #dee2e6;
    }

    .product-row {
      background-color: #f8f9fa;
    }

    .size-row {
      background-color: #ffffff;
    }

    .stock-input {
      width: 120px;
      text-align: center;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .btn {
      min-width: 70px;
    }
    .btn-primary {
    background-color: #0d6efd;
    color: #fff;
}
.btn-primary:hover {
    background-color: #084298;
}

.stock-input {
    width: 120px;
    text-align: center;
}

  </style>
    </head>
    <body>

        <div class="content">
            <h1>Inventory Management</h1>
            <p class="text-muted">Manage your stock efficiently by incrementing
                or decrementing stock for each product size.</p>

            <div class="table-responsive">
                <table
                    class="table table-bordered table-hover align-middle table-sm mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Product Name</th>
                            <th>Size</th>
                            <th>Current Stock</th>
                            <th>Update Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                        <!-- First size row -->
                        <tr class="product-row">
                            <td
                                rowspan="<%= product.sizes.length %>"><strong><%=
                                    product.product %></strong></td>
                            <td><%= product.sizes[0].size %></td>
                            <td><%= product.sizes[0].stock %></td>
                            <td>
                                <form action="/admin/inventory/update"
                                    method="POST"
                                    class="d-flex align-items-center gap-1">
                                    <input type="hidden" name="productId"
                                        value="<%= product._id %>">
                                    <input type="hidden" name="size"
                                        value="<%= product.sizes[0].size %>">
                                    <div class="input-group input-group-sm">
                                        <button type="button"
                                            class="btn btn-outline-secondary btn-decrement">-</button>
                                        <input type="number"
                                            name="changeInStock" value="0"
                                            class="form-control text-center stock-input"
                                            min="0">
                                        <button type="button"
                                            class="btn btn-outline-secondary btn-increment">+</button>
                                    </div>
                                    <button type="submit" name="action"
                                        value="increment"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-save"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <!-- Remaining sizes -->
                        <% for (let i = 1; i < product.sizes.length; i++) { %>
                        <tr class="size-row">
                            <td><%= product.sizes[i].size %></td>
                            <td><%= product.sizes[i].stock %></td>
                            <td>
                                <form action="/admin/inventory/update"
                                    method="POST"
                                    class="d-flex align-items-center gap-1">
                                    <input type="hidden" name="productId"
                                        value="<%= product._id %>">
                                    <input type="hidden" name="size"
                                        value="<%= product.sizes[i].size %>">
                                    <div class="input-group input-group-sm">
                                        <button type="button"
                                            class="btn btn-outline-secondary btn-decrement">-</button>
                                        <input type="number"
                                            name="changeInStock" value="0"
                                            class="form-control text-center stock-input"
                                            min="0">
                                        <button type="button"
                                            class="btn btn-outline-secondary btn-increment">+</button>
                                    </div>
                                    <button type="submit" name="action"
                                        value="increment"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-save"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (pagination && pagination.totalPages > 1) { %>
            <nav aria-label="Inventory pagination" class="mt-3">
                <ul class="pagination justify-content-center pagination-sm">
                    <li
                        class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="?page=<%= pagination.prevPage %>&limit=<%= pagination.limit || 10 %>">&laquo;</a>
                    </li>
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                    <li
                        class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                        <a class="page-link"
                            href="?page=<%= i %>&limit=<%= pagination.limit || 10 %>"><%=
                            i %></a>
                    </li>
                    <% } %>
                    <li
                        class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="?page=<%= pagination.nextPage %>&limit=<%= pagination.limit || 10 %>">&raquo;</a>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>

        <script>
    document.querySelectorAll('.btn-increment').forEach(btn => {
        btn.addEventListener('click', e => {
            const input = btn.parentElement.querySelector('input[name="changeInStock"]');
            input.value = parseInt(input.value || 0) + 1;
        });
    });

    document.querySelectorAll('.btn-decrement').forEach(btn => {
        btn.addEventListener('click', e => {
            const input = btn.parentElement.querySelector('input[name="changeInStock"]');
            input.value = Math.max(0, parseInt(input.value || 0) - 1);
        });
    });
</script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
