<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sidebar styles */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            width: 250px;
            background-color: #212529;
            color: #fff;
            overflow-y: auto;
            border-right: 1px solid #444;
            border-radius: 0 10px 10px 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
        }
        .sidebar .nav-link {
            color: #ddd;
            transition: background-color 0.3s, color 0.3s;
            padding: 10px 20px;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #495057;
        }
        .sidebar .nav-link.active {
            background-color: #007bff;
            color: #fff;
        }
        .sidebar .nav-item {
            margin-bottom: 1px;
        }
        .sidebar .nav-item:last-child {
            margin-bottom: 0;
        }
        .sidebar .p-3 h4 {
            font-size: 1.5rem;
            font-weight: 500;
        }

        /* Content styles */
        .content {
            margin-left: 250px; /* Adjust to match sidebar width */
            padding: 20px;
        }
        .content h2 {
            color: #000;
        }

        /* Inventory management table styles */
        .table {
            width: 100%;
            margin-top: 20px;
        }
        .product-row {
            background-color: #f8f9fa;
        }
        .size-row {
            background-color: #ffffff;
        }
        .btn {
            width: 60px;
            height: 40px;
            padding: 0;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .stock-input {
            width: 100px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-3">
            <h4>Dashboard</h4>
        </div>
        <ul class="nav flex-column p-3">
            <li class="nav-item">
                <a class="nav-link " href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/orders">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/category">Category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/customers">Customers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/coupons">Coupons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/banners">Banners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/offers">Offers</a>
            </li>
            <li class="nav-item"></li>
                <a class="nav-link active" href="/admin/inventory">Inventory</a>
            </li>
            <li class="nav-item mt-auto">
                <a class="nav-link text-danger" href="/auth/logout">Logout</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Inventory Management</h2>
        <p>Manage your stock efficiently by entering the amount to increase or decrease the stock of each product.</p>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Size</th>
                    <th>Stock</th>
                    <th>Stock Management</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <!-- Product Row -->
                    <tr class="product-row">
                        <td rowspan="<%= product.sizes.length %>"><strong><%= product.product %></strong></td>
                        <td><%= product.sizes[0].size %></td>
                        <td><%= product.sizes[0].stock %></td>
                        <td>
                            <div class="action-buttons">
                                <form action="/admin/inventory/update" method="POST" style="display:inline;">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <input type="hidden" name="size" value="<%= product.sizes[0].size %>">
                                    <input type="number" name="changeInStock" value="0" class="form-control stock-input" placeholder="Enter amount">
                                    <button type="submit" name="action" value="set" class="btn btn-primary btn-sm">Set</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <!-- Sizes Rows -->
                    <% for (let i = 1; i < product.sizes.length; i++) { %>
                    <tr class="size-row">
                        <td><%= product.sizes[i].size %></td>
                        <td><%= product.sizes[i].stock %></td>
                        <td>
                            <div class="action-buttons">
                                <form action="/admin/inventory/update" method="POST" style="display:inline;">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <input type="hidden" name="size" value="<%= product.sizes[i].size %>">
                                    <input type="number" name="changeInStock" value="0" class="form-control stock-input" placeholder="Enter amount">
                                    <button type="submit" name="action" value="set" class="btn btn-primary btn-sm">Set</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>

