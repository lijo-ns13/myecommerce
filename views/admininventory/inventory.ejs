<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Inventory Management</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet">
        <style>
    body {
      background-color: #ffffff;
      color: #000000;
    }

    .content {
        padding: 60px;
        max-width: 1200px;
        margin: 0 auto;
      /* margin-left: 250px; /* Adjust if you have sidebar */
      /* padding: 20px;  */
    }

    .content h1 {
      margin-bottom: 20px;
      font-weight: bold;
      color: #000;
    }

    .table {
      margin-top: 20px;
      border: 1px solid #dee2e6;
    }

    .product-row {
      background-color: #f8f9fa;
    }

    .size-row {
      background-color: #ffffff;
    }

    .stock-input {
      width: 120px;
      text-align: center;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .btn {
      min-width: 70px;
    }
  </style>
    </head>
    <body>

        <div class="content">
            <h1>Inventory Management</h1>
            <p class="text-muted">Manage your stock efficiently by setting the
                quantity for each product size.</p>

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>Size</th>
                        <th>Current Stock</th>
                        <th>Update Stock</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                    <!-- First size row with rowspan -->
                    <tr class="product-row">
                        <td rowspan="<%= product.sizes.length %>"><strong><%=
                                product.product %></strong></td>
                        <td><%= product.sizes[0].size %></td>
                        <td><%= product.sizes[0].stock %></td>
                        <td>
                            <div class="action-buttons">
                                <form action="/admin/inventory/update"
                                    method="POST"
                                    class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="productId"
                                        value="<%= product._id %>">
                                    <input type="hidden" name="size"
                                        value="<%= product.sizes[0].size %>">
                                    <input type="number" name="changeInStock"
                                        value="<%= product.sizes[0].stock %>"
                                        class="form-control stock-input" min="0"
                                        required>
                                    <button type="submit" name="action"
                                        value="set"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>

                    <!-- Remaining sizes -->
                    <% for (let i = 1; i < product.sizes.length; i++) { %>
                    <tr class="size-row">
                        <td><%= product.sizes[i].size %></td>
                        <td><%= product.sizes[i].stock %></td>
                        <td>
                            <div class="action-buttons">
                                <form action="/admin/inventory/update"
                                    method="POST"
                                    class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="productId"
                                        value="<%= product._id %>">
                                    <input type="hidden" name="size"
                                        value="<%= product.sizes[i].size %>">
                                    <input type="number" name="changeInStock"
                                        value="<%= product.sizes[i].stock %>"
                                        class="form-control stock-input" min="0"
                                        required>
                                    <button type="submit" name="action"
                                        value="set"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                    <% }) %>
                </tbody>
            </table>

            <!-- Error Message -->
            <div id="error-message" class="alert alert-danger mt-3"
                style="display: none;"></div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
