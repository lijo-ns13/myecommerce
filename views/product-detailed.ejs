                <!-- Main Product Image -->
                <div class="main-image-container position-relative overflow-hidden rounded shadow-sm">
                    <img id="main-product-image" src="<%= product.images[0].secured_url %>" alt="<%= product.product %>" class="img-fluid w-100">
