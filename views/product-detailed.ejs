                    <div class="row">
                        <% product.images.forEach((image, index) => { %>
                            <div class="col-3 mb-3">
                                <img src="<%= image.secured_url %>" 
                                     alt="<%= product.product %>" 
                                     class="img-thumbnail thumbnail" 
                                     loading="lazy"
