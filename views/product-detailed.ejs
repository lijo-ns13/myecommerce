                        <% for (let i = 1; i <= 5; i++) { %>
                            <% if (i <= Math.floor(avgRating)) { %>
                                <i class="fas fa-star"></i> <!-- Full star -->
                            <% } else if (i === Math.ceil(avgRating) && avgRating % 1 !== 0) { %>
                                <i class="fas fa-star-half-alt"></i> <!-- Half star -->
                            <% } else { %>
