<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Your existing CSS styles */
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <!-- Sidebar Content -->
    </div>
    
    <div class="content" id="content">
        <a href="/admin/products/add-product"><button>Add Product</button></a>


        <div class="container mt-5">
            <h2 class="mb-4">Products</h2>
            <% if (products.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Sizes</th>
                                <th>Stock</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const pro of products) { %>
                                <tr>
                                    <td><%= pro.product %></td>
                                    <td><%= pro.brand %></td>
                                    <td>$<%= pro.price %></td>
                                    <td><%= pro.category %></td>
                                    <td>
                                        <% if (pro.sizes.length > 0) { %>
                                            <ul>
                                                <% for (const size of pro.sizes) { %>
                                                    <li><%= size.size %></li>
                                                <% } %>
                                            </ul>
                                        <% } else { %>
                                            No sizes available
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (pro.sizes.length > 0) { %>
                                            <ul>
                                                <% for (const size of pro.sizes) { %>
                                                    <li><%= size.stock %></li>
                                                <% } %>
                                            </ul>
                                        <% } else { %>
                                            No stock information
                                        <% } %>
                                    </td>
                                    <td>
                                        <% for (const img of pro.images) { %>
                                            <img src="<%= img.secured_url %>" alt="Product Image" class="img-thumbnail">
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/products/edit/<%=pro._id%>">
                                            <button type="submit">Edit</button>
                                        </a>
                                        <form action="/admin/products/<%= pro.isListed ? 'unlist-product' : 'list-product' %>/<%= pro._id %>" method="post" class="d-inline-block" id="form-<%= pro._id %>">
                                            <button type="submit" class="btn <%= pro.isListed ? 'btn-warning' : 'btn-success' %> px-4 py-2">
                                              <i class="fas <%= pro.isListed ? 'fa-times-circle' : 'fa-check-circle' %> me-2"></i>
                                              <%= pro.isListed ? 'Unlist' : 'List' %>
                                            </button>
                                          </form>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <h1>No products available</h1>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- SweetAlert library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js"></script>

    <script>
        document.querySelectorAll('form[id^="form-"]').forEach(form => {
          form.addEventListener('submit', async (event) => {
            event.preventDefault();
            
            const formId = form.id;
            const url = form.action;
            const formData = new FormData(form);
      
            const options = {
              method: 'POST',
              body: formData
            };
      
            try {
              const response = await fetch(url, options);
              const result = await response.json();
              console.log('result', result);
      
              if (response.ok) {
                // Handle success
                Swal.fire({
                  icon: 'success',
                  title: 'Success!',
                  text: result.message || 'Operation successful.',
                  confirmButtonText: 'OK'
                }).then(() => {
                  window.location.reload(); // Reload the page to reflect changes
                });
              } else {
                // Handle error
                Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: result.message || 'Something went wrong.',
                  confirmButtonText: 'OK'
                });
              }
            } catch (error) {
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred. Please try again.',
                confirmButtonText: 'OK'
              });
            }
          });
        });
      </script>
      
</body>
</html>
