<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            width: 250px;
            background-color: #212529;
            color: #fff;
            overflow-y: auto;
            border-right: 1px solid #444;
            border-radius: 0 10px 10px 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.5);
            transition: transform 0.3s ease;
        }
        .sidebar.collapsed {
            transform: translateX(-250px);
        }
        .sidebar .nav-link {
            color: #ddd;
            transition: background-color 0.3s, color 0.3s;
            padding: 10px 20px;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #495057;
        }
        .sidebar .nav-link.active {
            background-color: #007bff;
            color: #fff;
        }
        .sidebar .nav-item {
            margin-bottom: 1px;
        }
        .sidebar .nav-item:last-child {
            margin-bottom: 0;
        }
        .sidebar .p-3 h4 {
            font-size: 1.5rem;
            font-weight: 500;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            background-color: #f8f9fa;
            transition: margin-left 0.3s ease;
        }
        .content.expanded {
            margin-left: 0;
        }
        .img-thumbnail {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
        }
        .toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 101;
            display: none;
        }
        @media (max-width: 768px) {
    .sidebar {
        position: relative;
        width: 100%;
        height: auto;
        border-radius: 0;
        box-shadow: none;
        border-right: none;
        top: 0;
        z-index: 10;
    }

    .content {
        margin-left: 0;
        padding-top: 20px;
    }

    .nav-link {
        text-align: center;
        padding: 15px 0;
    }
}

    
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <button class="btn btn-primary d-md-none toggle-btn" id="sidebarToggle">â˜°</button>
        <div class="p-3">
            <h4>Dashboard</h4>
        </div>
        <ul class="nav flex-column p-3">
            <li class="nav-item">
                <a class="nav-link" href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/admin/products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/orders">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/category">Category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/customers">Customers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/coupons">Coupons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/banners">Banners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/offers">Offers</a>
            </li>
            <li class="nav-item mt-auto">
                <a class="nav-link text-danger" href="/auth/logout">Logout</a>
            </li>
        </ul>
    </div>

    <div class="content" id="content">
        <div class="container mt-5">
            <h2 class="mb-4">Products</h2>
            <% if (products.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Sizes</th>
                                <th>Stock</th>
                                <th>Category</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const pro of products) { %>
                                <tr>
                                    <td><%= pro.product %></td>
                                    <td><%= pro.brand %></td>
                                    <td>$<%= pro.price %></td>
                                    <td><%= pro.description %></td>
                                    <td>
                                        <ul>
                                            <% for (const sz of pro.size) { %>
                                                <li><%= sz %></li>
                                            <% } %>
                                        </ul>
                                    </td>
                                    <td><%= pro.stock %></td>
                                    <td><%= pro.category %></td>
                                    <td>
                                        <% for (const img of pro.images) { %>
                                            <img src="<%= img.secured_url %>" alt="Product Image" class="img-thumbnail">
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/products/edit/<%=pro._id%>">
                                            <button type="submit">edit</button>
                                        </a>
                                        <!-- <form action="/admin/products/edit/<%= pro._id %>" method="POST">
                                        <input type="hidden" name="_method" value="PATCH">
                                        <button type="submit" class="btn btn-warning btn-sm">Edit</button> -->
                                        </form>
                                        
                                        <form action="/admin/products/<%= pro.isListed ? 'unlist-product' : 'list-product' %>/<%= pro._id %>" method="post" class="d-inline-block">
                                            <button type="submit" class="btn <%= pro.isListed ? 'btn-warning' : 'btn-success' %> px-4 py-2">
                                              <i class="fas <%= pro.isListed ? 'fa-times-circle' : 'fa-check-circle' %> me-2"></i>
                                              <%= pro.isListed ? 'Unlist' : 'List' %>
                                            </button>
                                          </form>
                                          
                                          
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <h1>No products available</h1>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('expanded');
        });
    </script>
</body>
</html>

