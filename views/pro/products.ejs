<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            /* background-color: #000; */
            color: #fff;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            width: 250px;
            background-color: #212529;
            color: #fff;
            overflow-y: auto;
            border-right: 1px solid #444;
            border-radius: 0 10px 10px 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.5);
        }
        .sidebar .nav-link {
            color: #ddd;
            transition: background-color 0.3s, color 0.3s;
            padding: 10px 20px;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #495057;
        }
        .sidebar .nav-link.active {
            background-color: #007bff;
            color: #fff;
        }
        .sidebar .nav-item {
            margin-bottom: 1px;
        }
        .sidebar .nav-item:last-child {
            margin-bottom: 0;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
        }
        .content h2 {
            color: #fff;
        }
        .sidebar .p-3 h4 {
            font-size: 1.5rem;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="p-3">
            <h4>Dashboard</h4>
        </div>
        <ul class="nav flex-column p-3">
            <li class="nav-item">
                <a class="nav-link" href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/admin/products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/orders">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/category">Category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/customers">Customers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/coupons">Coupons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/banners">Banners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/offers">Offers</a>
            </li>
            <li class="nav-item"></li>
                <a class="nav-link" href="/admin/inventory">Inventory</a>
            </li>
            <li class="nav-item mt-auto">
                <a class="nav-link text-danger" href="/auth/logout">Logout</a>
            </li>
        </ul>
    </div>

    <div class="content">
        
        <!-- <form action="/admin/products/add-product" method="POST">
            <input type="hidden" name="_method" value="PATCH">
            <button type="submit">add product</button>
        </form> -->
        <a href="/admin/products/add-product">
            <button>add product</button>
        </a>

        <div class="container mt-5">
            <h2 class="mb-4">Products</h2>
            <% if (products.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Brand</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Sizes</th>
                                <th>Stock</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const pro of products) { %>
                                <tr>
                                    <td><%= pro.product %></td>
                                    <td><%= pro.brand %></td>
                                    <td>$<%= pro.price %></td>
                                    <td><%= pro.category %></td>
                                    <td>
                                        <% if (pro.sizes.length > 0) { %>
                                            <ul>
                                                <% for (const size of pro.sizes) { %>
                                                    <li><%= size.size %></li>
                                                <% } %>
                                            </ul>
                                        <% } else { %>
                                            No sizes available
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (pro.sizes.length > 0) { %>
                                            <ul>
                                                <% for (const size of pro.sizes) { %>
                                                    <li><%= size.stock %></li>
                                                <% } %>
                                            </ul>
                                        <% } else { %>
                                            No stock information
                                        <% } %>
                                    </td>
                                    <td>
                                        <% for (const img of pro.images) { %>
                                            <img src="<%= img.secured_url %>" alt="Product Image" class="img-thumbnail">
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/products/edit/<%= pro._id %>">
                                            <button type="submit" class="btn btn-warning">Edit</button>
                                        </a>
                                        <form action="/admin/products/<%= pro.isListed ? 'unlist-product' : 'list-product' %>/<%= pro._id %>" method="post" class="d-inline-block" id="form-<%= pro._id %>">
                                            <button type="submit" class="btn <%= pro.isListed ? 'btn-warning' : 'btn-success' %> px-4 py-2">
                                                <i class="fas <%= pro.isListed ? 'fa-times-circle' : 'fa-check-circle' %> me-2"></i>
                                                <%= pro.isListed ? 'Unlist' : 'List' %>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
        
                <!-- Pagination controls -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } else { %>
                <h1>No products available</h1>
            <% } %>
        </div>
        
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- SweetAlert library -->

    <script>
        document.querySelectorAll('form[id^="form-"]').forEach(form => {
          form.addEventListener('submit', async (event) => {
            event.preventDefault();
            
            const formId = form.id;
            const url = form.action;
            const formData = new FormData(form);
      
            const options = {
              method: 'POST',
              body: formData
            };
      
            try {
              const response = await fetch(url, options);
              const result = await response.json();
              console.log('result', result);
      
              if (response.ok) {
                // Handle success
                Swal.fire({
                  icon: 'success',
                  title: 'Success!',
                  text: result.message || 'Operation successful.',
                  confirmButtonText: 'OK'
                }).then(() => {
                  window.location.reload(); // Reload the page to reflect changes
                });
              } else {
                // Handle error
                Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: result.message || 'Something went wrong.',
                  confirmButtonText: 'OK'
                });
              }
            } catch (error) {
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred. Please try again.',
                confirmButtonText: 'OK'
              });
            }
          });
        });
      </script>
      
</body>
</html>
