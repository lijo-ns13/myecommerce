<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* General styles */
        .navbar-nav .nav-item .nav-link {
            padding: 10px 15px;
        }
        .navbar-brand img {
            max-height: 40px;
        }
        .navbar {
            margin-bottom: 20px;
        }
        .banner img {
            width: 100%;
            height: auto;
        }
        .section {
            text-align: center;
            padding: 40px 20px;
            background-color: #f8f9fa;
        }
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .product-box {
            text-decoration: none; /* Remove underline from links */
            color: inherit; /* Inherit text color */
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: stretch;
            width: 100%;
            max-width: 300px;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .product-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .product-images {
            position: relative;
            height: 200px;
            overflow: hidden;
        }
        .product-images img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }
        .product-images img.active {
            opacity: 1;
        }
        .product-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
            color: #333;
        }
        .product-details {
            margin-bottom: 15px;
            text-align: center;
        }
        .original-price {
            text-decoration: line-through;
            color: #6c757d;
            margin-right: 10px;
        }
        .final-price {
            font-size: 1.5rem;
            color: #ff5252;
            font-weight: bold;
            margin-right: 10px;
        }
        .btn-love {
            color: #6c757d;
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .btn-love.liked {
            color: red;
        }
        .btn-view-more {
            margin-top: 10px;
        }
        .badge {
            display: block;
            margin-top: 10px;
        }
        .stock-quantity {
            margin-top: 5px;
            color: #28a745; /* Green for in-stock items */
        }
        

/* Ensure the colors align with your design */
.text-danger {
    color: red; /* Color for liked items */
}

.text-muted {
    color: gray; /* Color for not liked items */
}

        @media (max-width: 768px) {
            .product-box {
                max-width: 100%;
            }
        }
        @media (min-width: 769px) and (max-width: 992px) {
            .product-box {
                max-width: 45%;
            }
        }
        @media (min-width: 993px) {
            .product-box {
                max-width: 30%;
            }
        }
        .btn-wishlist {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 18px;
}

.btn-wishlist.added {
    color: red; /* Change to your preferred color */
}

.wishlist-feedback {
    margin-top: 5px;
    font-size: 14px;
    color: green; /* Color for success message */
    opacity: 1;
    transition: opacity 0.3s ease;
}
.nav-item {
    position: relative; /* Set relative position for positioning badge */
}

.nav-item .badge {
    position: absolute; 
    top: -5px; 
    right: -10px; 
    font-size: 12px; 
}

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="img/logo.png" alt="Logo" height="40">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/auth/signin"><img src="img/log-in.png" alt="Login" height="30"></a></li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">
                        <img src="img/cart.png" alt="Cart" height="30">
                        <span class="badge badge-light"></span> <!-- Cart item count -->
                    </a>
                </li>
                
                <li class="nav-item"><a class="nav-link" href="/user/wishlist"><img src="img/wishlist.png" alt="Wishlist" height="30"></a></li>
                <li class="nav-item"><a class="nav-link" href="/user/profile"><img src="img/userprofile.jpg" alt="User Profile" height="30"></a></li> <!-- Added wishlist link -->
            </ul>
        </div>
    </nav>
    

    <!-- Banner -->
    <div class="container-fluid p-0 banner">
        <img src="img/bannerone.jpg" alt="Banner" class="img-fluid">
    </div>

    <!-- Discover Section -->
    <div class="section">
        <h1>New Arrivals</h1>
        <p>Find your new favorite shoes</p>
        <div class="container">
            <div class="product-grid">
                <% for (const product of products) { %>
                    <a href="/product-detail/<%= product._id %>" class="product-box">
                        <div class="product-images" onmouseover="startSlideshow(this)" onmouseout="stopSlideshow(this)">
                            <% for (const image of product.images) { %>
                                <img src="<%= image.secured_url %>" alt="Product Image" class="<%= image === product.images[0] ? 'active' : '' %>">
                            <% } %>
                        </div>
                        <div class="product-title mt-2">
                            <%= product.product %>
                        </div>
                        <div class="product-details text-center mt-2">
                            <p class="rating">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <i class="fas fa-star <%= i < product.rating ? 'text-warning' : 'text-muted' %>"></i>
                                <% } %>
                            </p>
                            <% if (product.offerApplied) { %>
                                <p>
                                    <span class="original-price">$<%= product.price.toFixed(2) %></span>
                                    <span class="final-price">$<%= product.finalPrice.toFixed(2) %></span>
                                    <span class="discount-percentage" style="color: red; font-weight: bold;">
                                        <% 
                                            const discountPercentage = ((product.price - product.finalPrice) / product.price) * 100; 
                                        %>
                                        <%= discountPercentage.toFixed(0) %>% off
                                    </span>
                                </p>
                            <% } else { %>
                                <p class="final-price">$<%= product.price.toFixed(2) %></p>
                            <% } %>
                            <span class="badge <%= product.sizes.some(size => size.stock > 0) ? 'badge-success' : 'badge-danger' %>">
                                <%= product.sizes.some(size => size.stock > 0) ? 'In Stock' : 'Out of Stock' %>
                            </span>
                        </div>
                        <form action="/user/wishlist/<%= product.inWishlist ? 'remove' : 'add' %>/<%= product._id %>" method="POST" class="wishlist-form" onsubmit="event.preventDefault(); handleWishlistToggle('<%= product._id %>', this)">
                            <button class="btn btn-love" type="submit" style="border: none; background: transparent;">
                                <i class="fas fa-heart <%= product.inWishlist ? 'text-danger' : 'text-muted' %>" id="wishlist-icon-<%= product._id %>"></i>
                            </button>
                        </form>
                        
                        
                        
                    </a>
                <% } %>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="/products" class="btn btn-primary btn-view-more">View More</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3">
        <div class="container">
            <a href="#" class="text-light mx-2"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-light mx-2"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-light mx-2"><i class="fab fa-instagram"></i></a>
            <p class="text-light">© 2024 Your E-commerce. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Image slideshow logic
        function startSlideshow(element) {
            const images = element.getElementsByTagName('img');
            let index = 0;
            const interval = setInterval(() => {
                images[index].classList.remove('active');
                index = (index + 1) % images.length;
                images[index].classList.add('active');
            }, 2000);
            element.dataset.interval = interval; // Store interval ID
        }

        function stopSlideshow(element) {
            clearInterval(element.dataset.interval);
            const images = element.getElementsByTagName('img');
            for (let img of images) {
                img.classList.remove('active'); // Hide all images
            }
            images[0].classList.add('active'); // Show the first image
        }
        
    async function handleWishlistToggle(productId, form) {
        const currentIcon = document.getElementById(`wishlist-icon-${productId}`);
        const isAdding = currentIcon.classList.contains('text-muted');

        try {
            const response = await fetch(`/user/wishlist/${isAdding ? 'add' : 'remove'}/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            // Update heart color based on wishlist status
            if (data.success) {
                if (isAdding) {
                    currentIcon.classList.remove('text-muted');
                    currentIcon.classList.add('text-danger');
                } else {
                    currentIcon.classList.remove('text-danger');
                    currentIcon.classList.add('text-muted');
                }
            }

            // Display feedback
            const feedbackElement = form.querySelector('.wishlist-feedback');
            feedbackElement.style.display = 'block';
            feedbackElement.textContent = data.message;

            // Fade out feedback after 2 seconds
            setTimeout(() => {
                feedbackElement.style.opacity = '0';
                setTimeout(() => {
                    feedbackElement.style.display = 'none';
                }, 300);
            }, 2000);

        } catch (error) {
            console.error('Error toggling wishlist:', error);
            // alert('There was an error toggling the wishlist.');
        }
    }

    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
