    animation: pulse 1s infinite;
}

/* Success state */
.wishlist-button.success .heart-icon {
    animation: success-pulse 0.5s;
}

/* Error state */
.wishlist-button.error .heart-icon {
    animation: error-shake 0.5s;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

